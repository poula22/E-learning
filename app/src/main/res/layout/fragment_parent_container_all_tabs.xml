<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/polapola">

        <FrameLayout
            android:id="@+id/parent_fragment_tab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/parent_bottom_naviagation_view" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/parent_bottom_naviagation_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/parent_bottom_navigation_menu"
            app:itemTextColor="@color/black"
            app:itemIconTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>